# vim: set ft=sh
alias ..="cd .."
alias ...="cd ../.."
alias -- -="cd -"
alias l='ls -G -a'
alias ls='ls -G -a'
alias t='tmux'
alias tat='tmux a -t'
alias g='git'
alias tig='tig --all'
alias rprod='RAILS_ENV=production'
alias rdev='RAILS_ENV=development'
alias rtest='RAILS_ENV=test'
alias be="bundle exec"
alias ctags_rails='ctags --languages=ruby --exclude=".git*" --exclude="log" -R . $(bundle list --paths)'
alias notesync='sh ~/Projects/src/github.com/kazukgw/Note/sync.sh'
alias vassh='cd ~/Projects && vagrant ssh'

# 起動中のアプリ一覧
alias lsapp="ps aux | grep -v grep | grep Applications | grep -o -e 'MacOS\/.*' | awk '{print \$1}' | sed -e 's/MacOS\///'"

alias v='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
alias vi='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
alias vim='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'


