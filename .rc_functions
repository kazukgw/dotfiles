# vim: set ft=sh
function pj() {
  local selected=$(find ~/Projects/src -maxdepth 3 -type d | grep -o -e 'src\/.*'| peco)
  if [ -n "$selected" ]; then
    cd $selected
  else
    echo "$selected is not found..."
  fi
}

